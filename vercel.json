{
  "version": 2,
  "framework": "angular",
  "buildCommand": "npm run build",
  "outputDirectory": "dist/cloudsys-portal-web/browser",

  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://cloudsys-portal.vercel.app/"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],

  "functions": {
    "api/**": {
      "runtime": "nodejs20.x",
      "includeFiles": "prisma/**"
    }
  }
}
